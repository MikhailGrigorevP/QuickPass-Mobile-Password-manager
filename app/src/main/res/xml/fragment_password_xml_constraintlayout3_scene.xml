<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="500">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/cvQualityCard"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/base_card_horizontal_margin"
            motion:layout_constraintTop_toBottomOf="@+id/tvUsernameText"
            android:layout_marginStart="@dimen/base_card_horizontal_margin"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/medium_margin"
            android:alpha="0" />
        <Constraint
            android:id="@+id/rvFoldersRecycler"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/base_margin"
            motion:layout_constraintTop_toBottomOf="@+id/cvQualityCard"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/base_card_vertical_margin"
            android:alpha="0" />
        <Constraint
            android:id="@+id/fabAddFolder"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/base_margin"
            motion:layout_constraintTop_toBottomOf="@+id/rvFoldersRecycler"
            android:layout_marginTop="@dimen/base_card_vertical_margin"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>