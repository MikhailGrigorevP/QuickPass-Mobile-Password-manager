<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mikhailgrigorev.quickpassword">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGEE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="q">
        <activity android:name="com.mikhailgrigorev.quickpassword.DonutActivity" />
        <service
            android:name="com.mikhailgrigorev.quickpassword.service.QuickPassAutoFillService"
            android:label="QuickPass"
            android:enabled="true"
            android:process=":process_description"
            android:exported="false"
            tools:node="replace"
            android:permission="android.permission.BIND_AUTOFILL_SERVICE">
            <intent-filter>
                <action android:name="android.service.autofill.AutofillService" />
            </intent-filter>

            <meta-data
                android:name="android.autofill"
                android:resource="@xml/service_configuration" />
        </service>
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.settings.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.pin_code.set.SetPinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.pin_code.re.RePinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.pin_code.view.PinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.about.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.account.edit.EditAccountActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.password_card.edit.EditPassActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.password_card.view.PasswordViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.password_card.add.NewPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.account.view.AccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.auth.sign.SignActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.auth.re.sign.ReSignActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.auth.re.login.ReLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.auth.login.LoginAfterSplashActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.mikhailgrigorev.quickpassword.ui.auth.login.LoginActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".LoginActivity"
            android:enabled="true"
            android:icon="@mipmap/ic_launcher_violet"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name"
            android:targetActivity="com.mikhailgrigorev.quickpassword.ui.auth.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name=".LoginActivityGreen"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_green"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name"
