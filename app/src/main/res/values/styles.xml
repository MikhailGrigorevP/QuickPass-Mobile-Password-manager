<resources>
    <style name="popUpAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_on</item>
        <item name="android:windowExitAnimation">@anim/popup_off</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@drawable/alert_dialog</item>
        <item name="android:useDefaultMargins"> true</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/colorAccent</item>
    </style>


    <style name="AppThemeRed" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ic_account_Red</item>
        <item name="colorAccent">@color/ic_account_Red_Tr</item>
    </style>
