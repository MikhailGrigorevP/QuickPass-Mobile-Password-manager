<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFolderCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginStart="@dimen/base_card_horizontal_margin"
        android:layout_marginTop="@dimen/base_card_vertical_margin"
        android:layout_marginEnd="@dimen/base_card_horizontal_margin"
        android:layout_marginBottom="@dimen/base_card_vertical_margin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/base_card_radius"
        card_view:cardElevation="@dimen/base_card_elevation">

        <LinearLayout
            android:id="@+id/llPasswordCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/medium_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <ImageButton
                    android:id="@+id/ibFavorite"
                    android:layout_width="@dimen/image_button_size_20"
                    android:layout_height="@dimen/image_button_size_20"
                    android:layout_marginEnd="@dimen/base_card_horizontal_margin"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:contentDescription="@string/log_out"
                    android:src="@drawable/heart"
                    android:visibility="gone"
                    card_view:tint="#FFD180" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|clip_vertical|center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFolderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|clip_vertical|left"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded"
                        tools:text="Folder" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:maxWidth="@dimen/max_width"
                        android:singleLine="false"
                        tools:text="Long long description" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivColorTag"
                    android:layout_width="@dimen/image_button_size_10"
                    android:layout_height="@dimen/image_button_size_10"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/base_margin"
                    android:contentDescription="@string/no_text"
                    card_view:srcCompat="@drawable/circle_improvement" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>