<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="500"
        motion:motionInterpolator="easeInOut">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/cvMainSettingsCard"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/base_margin"
            motion:layout_constraintTop_toBottomOf="@+id/tvSettingsText"
            android:layout_marginStart="@dimen/base_margin"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/medium_margin"
            android:alpha="0" />
        <Constraint
            android:id="@+id/tvSettingsText"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/medium_margin"/>
        <Constraint
            android:id="@+id/tvSettingsText"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/medium_margin" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:id="@+id/tvSettingsText" />
        <Constraint
            android:id="@+id/tvImportExport"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/base_margin"
            motion:layout_constraintTop_toBottomOf="@+id/cvAutoFillSettings"
            android:layout_marginStart="@dimen/base_margin"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/base_margin"
            android:alpha="0" />
        <Constraint
            android:id="@+id/cvWarningRulesCard"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/base_margin"
            motion:layout_constraintTop_toBottomOf="@+id/tvImportExport"
            android:layout_marginStart="@dimen/base_margin"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/base_margin"
            android:alpha="0" />
        <Constraint
            android:id="@+id/cvImpExButtons"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/base_margin"
            motion:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="@dimen/base_margin"
            motion:layout_constraintTop_toBottomOf="@+id/cvWarningRulesCard"
            android:layout_marginTop="@dimen/base_margin"
            android:alpha="0"
            android:translationY="50dp" />
        <Constraint
            android:id="@+id/cvImpExButtons"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/base_margin"
            motion:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="@dimen/base_margin"
            motion:layout_constraintTop_toBottomOf="@+id/cvWarningRulesCard"
            android:layout_marginTop="@dimen/base_margin" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>