<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFolderCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginStart="@dimen/base_card_vertical_margin"
        android:layout_marginTop="@dimen/base_card_vertical_margin"
        android:layout_marginEnd="@dimen/base_card_vertical_margin"
        android:layout_marginBottom="@dimen/base_card_vertical_margin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/base_card_radius"
        card_view:cardElevation="@dimen/base_card_elevation">

        <LinearLayout
            android:id="@+id/llPasswordCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingStart="@dimen/small_margin"
            android:paddingEnd="@dimen/small_margin"
            android:padding="@dimen/small_padding">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|clip_vertical|center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFolderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|clip_vertical|left"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded"
                    tools:text="test" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:maxWidth="@dimen/max_width"
                    android:singleLine="false"
                    tools:text="test" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvColorCard"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="@dimen/base_margin"
                android:visibility="gone"
                card_view:cardBackgroundColor="@color/yellow_quality"
                card_view:cardCornerRadius="@dimen/extra_base_card_radius"
                card_view:cardElevation="@dimen/base_card_elevation"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>