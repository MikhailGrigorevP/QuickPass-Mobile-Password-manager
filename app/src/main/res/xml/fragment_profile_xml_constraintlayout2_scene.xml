<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="500">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/cvAccountAvatar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/account_logo_size"
            android:layout_height="@dimen/account_logo_size"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/max_width"
            android:scaleX="0"
            android:scaleY="0" />
        <Constraint
            android:id="@+id/cvEditAccount"
            android:scaleX="0"
            android:scaleY="0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@+id/cvAccountAvatar"
            android:layout_marginStart="40dp"
            motion:layout_constraintTop_toTopOf="@+id/cvAccountAvatar"
            motion:layout_constraintStart_toStartOf="@+id/cvAccountAvatar"
            android:layout_marginTop="40dp"
            motion:transitionEasing="accelerate" />
        <Constraint
            android:id="@+id/tvUsernameText"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/cvAccountAvatar"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/medium_margin"
            android:alpha="0" />
        <Constraint
            android:id="@+id/llTotalPoints"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tvUsernameText"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/small_margin"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>