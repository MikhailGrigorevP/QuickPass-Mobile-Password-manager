<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.QP.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/colorLight</item>
        <item name="android:windowSplashScreenAnimatedIcon">
            @drawable/ic_splashscreen_logo_animated
        </item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.QP</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_name_vector</item>
    </style>

    <style name="Theme.QP" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/medium_font</item>
        <item name="backgroundCard">@android:color/system_neutral1_900</item>
        <item name="lightAccent">@android:color/system_neutral1_900</item>
        <item name="colorPrimary">@android:color/system_accent1_500</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_800</item>
        <item name="colorSecondary">@android:color/system_accent2_600</item>
        <item name="colorAccent">@android:color/system_accent1_500</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.QP.Main" parent="Theme.QP">
        <item name="android:navigationBarColor">@android:color/system_neutral1_800</item>
    </style>

    <style name="Theme.QP.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/Theme.QP.BottomNavigationViewOverlay</item>
    </style>

    <style name="Theme.QP.BottomNavigationViewOverlay" parent="">
        <item name="colorSurface">@android:color/system_neutral1_800</item>
        <item name="colorPrimary">@android:color/system_neutral1_800</item>
        <item name="colorSecondaryContainer">@android:color/system_accent1_700</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorControlActivated">@android:color/system_accent1_500</item>
    </style>

</resources>